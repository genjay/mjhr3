<%= simple_form_for(@viewschdep) do |f| %>
  <div class="form-inputs">
    <%= f.input :id, as: :hidden %>
    <%= f.input :department_id, as: :hidden %>
    <%= f.input :uid, label:'代號', :readonly => true %> 
    <%= f.input :name, label:'部門', :readonly => true %>
    <%= f.input :duty_date, label:'出勤日', as: :string, :readonly => true %>
    <%= f.input :is_holiday, label:'假日', as: :boolean %>
    <%= f.association :worktype, label:'班別', value_method: :id, label_method: lambda {|f| "#{f.uid} #{f.name}"}  %> 
  </div> 

  <div class="form-actions" >
    <%= f.button :submit,'存檔' %>

    <%= link_to '回上一頁', view_sch_deps_path, class: 'btn btn-warning'%>
  </div>
<% end %>