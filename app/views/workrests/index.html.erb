<p id="notice"><%= notice %></p>

<h1>Listing Workrests</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>休息(起)</th> 
    </tr>
  </thead>

  <tbody>
    <% @workrests.each do |workrest| %>
      <tr>
        <td><%= workrest.id %></td>
        <td><%= workrest.worktype_id %></td>
        <td><%= workrest.rest_begin_at %></td>
        <td><%= link_to 'show', worktype_workrest_path(@worktype,workrest) %></td>
        <td><%= workrest.mins_of_rest %></td>
        <td><%= workrest.is_deduct_for_duty %></td>
        <td><%= workrest.is_holiday %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

