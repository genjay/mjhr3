<%= simple_form_for(@worktype) do |f| %>
  <% f.error_notification %>

  <div class="form-inputs">
    <%= f.input :uid,placeholder:'班別代號',autofocus:true %>
    <%= f.input :name,placeholder:'班別名稱' %>
    <%= f.input :on_duty_at,as: 'string' %>
    <%= f.input :off_duty_at,as: 'string' %>
    <%= f.input :buffer_before_duty,placeholder:'提早上班，提早下班(分鐘)' %>
    <%= f.input :buffer_after_duty,placeholder:'延後上班，延後下班(分鐘)' %>
    <%= f.input :minimum_before_overwork,placeholder:'上班前加班最小申報單位(分鐘)' %>
    <%= f.input :minimum_after_overwork,placeholder:'下班後加班最小申報單位(分鐘)' %>
    <%= f.input :minimum_holiday_overwork,placeholder:'假日加班最小申報單位(分鐘)' %>
    <%= f.input :range_on,placeholder:'判斷刷卡時間用，預設:360' %>
    <%= f.input :range_off,placeholder:'判斷刷卡時間用，預設：480' %>
    <%= f.input :is_stoped %>
    <%= f.input :mins_of_duty,placeholder:'該班別工時(分鐘)' %>
    <%= f.input :memo %> 
  </div>

