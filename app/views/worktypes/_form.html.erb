    <%# q.label :_destroy, "Remove" %>
    <%# end %>

  <div class="form-actions">
      <%= f.button :submit,'存檔',class: 'btn btn-primary' %>
      <%= link_to '回上一頁', worktypes_path,class: 'btn btn-warning', method: :get %>
  </div>

<% end %>
