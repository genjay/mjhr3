<%= simple_form_for(@annual_leave_list) do |f| %>
  <% f.error_notification %>

  <div class="form-inputs">
    <%= f.input :months_of_job %>
    <%= f.input :days %>
    <%= f.input :memo %>
    <%= f.input :ou_id %>
  </div>

  <div class="form-actions">
      <%= f.button :submit,'存檔',class: 'btn btn-primary' %>
      <%= link_to 'Back', annual_leave_lists_path,class: 'btn btn-primary', method: :get %>
  </div>

<% end %> 
