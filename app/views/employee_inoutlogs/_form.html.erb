<h4><strong><%= @employee_name %></strong></h4>

<%= simple_form_for @inoutlog, url: employee_employee_inoutlogs_path do |f| %>
  <% f.error_notification %>

  <div class="form-inputs">
    <%= f.input :department_id, as: :hidden %>
    <%= f.input :action, label: '類別', :collection => @options.map {|k,v| [v,k]}, :include_blank => false %>
    <%= f.input :begin_at, label: '生效日', as: :string %>
    <%= f.input :days_of_jobage, label: '期初年資', input_html: {value: f.object.days_of_jobage || '0'} %>
  </div>

  <div class="form-actions">
      <%= f.button :submit,'存檔',class: 'btn btn-primary' %>
      <%= link_to 'Back', employee_employee_inoutlogs_path, class: 'btn btn-primary', method: :get %>
  </div>

<% end %> 