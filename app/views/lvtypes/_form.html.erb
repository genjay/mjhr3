<%= simple_form_for(@lvtype) do |f| %>
  <% f.error_notification %>

  <div class="form-inputs">
    <%= f.input :uid,label:'代號' %>
    <%= f.input :name,label:'名稱' %>
    <%= f.input :memo,label:'備註' %>
  </div>

  <div class="form-actions">
      <%= f.button :submit,'存檔',class: 'btn btn-primary' %>
      <%= link_to '回上一頁', lvtypes_path,class: 'btn btn-warning', method: :get %>
  </div>

<% end %>