<%= simple_form_for(@pay_type) do |f| %>
  <% f.error_notification %>

  <div class="form-inputs">
    <%= f.input :uid,placeholder:'薪資項目代號',autofocus:true %>
    <%= f.input :name,placeholder:'薪資項目名稱' %>
    <%= f.input :cycle_unit,include_blank: false ,collection: Option.of(PayType,'cycle_unit') %> 
    <%= f.input :rule_for_break,include_blank: false ,collection: Option.of(PayType,'rule_for_break') %>
    <%= f.input :is_stoped %>
    <%= f.input :ou_id %>
    <%= f.input :memo %>
  </div>

  <div class="form-actions">
      <%= f.button :submit,'存檔',class: 'btn btn-primary' %>
      <%= link_to 'Back', pay_types_path,class: 'btn btn-primary', method: :get %>
  </div>

<% end %> 
