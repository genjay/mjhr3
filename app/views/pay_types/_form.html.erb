<%= simple_form_for(@pay_type) do |f| %>
  <% f.error_notification %>

  <div class="form-inputs">
    <%= f.input :uid,label:'代號',placeholder:'薪資項目代號',autofocus:true %>
    <%= f.input :name,label:'名稱',placeholder:'薪資項目名稱' %>
    <%= f.input :cycle_unit,include_blank: false ,collection: Option.of(PayType,'cycle_unit') %> 
    <%= f.input :rule_for_break,include_blank: false ,collection: Option.of(PayType,'rule_for_break') %>
    <%= f.input :is_stoped,label:'停用' %>
    <!-- <%= f.input :ou_id %> -->
    <%= f.input :memo,label:'備註' %>
  </div>

  <div class="form-actions">
      <%= f.button :submit,'存檔',class: 'btn btn-primary' %>
      <%= link_to '回上一頁', pay_types_path,class: 'btn btn-warning', method: :get %>
  </div>

<% end %> 
