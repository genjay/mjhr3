<p id="notice"><%= notice %></p>

<h1>Listing Pay Types</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Uid</th>
      <th>Name</th>
      <th>Cycle unit</th>
      <th>Rule for break</th>
      <th>Is stoped</th>
      <th>Ou it</th>
      <th>Memo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pay_types.each do |pay_type| %>
      <tr>
        <td><%= pay_type.uid %></td>
        <td><%= pay_type.name %></td>
        <td><%= pay_type.cycle_unit %></td>
        <td><%= pay_type.rule_for_break %></td>
        <td><%= pay_type.is_stoped %></td>
        <td><%= pay_type.ou_it %></td>
        <td><%= pay_type.memo %></td>
        <td><%= link_to 'Show', pay_type %></td>
        <td><%= link_to 'Edit', edit_pay_type_path(pay_type) %></td>
        <td><%= link_to 'Destroy', pay_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

