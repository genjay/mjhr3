<%= simple_form_for(@forget) do |f| %>
  <% f.error_notification %>
  <%= params[:action] %>
  <div class="form-inputs">
    <table width="100%">
      <tr>
        <td width="50%">
          <% if params[:action] == 'new' || params[:action] == 'create' %>
            <%= f.input :employee_uid,label:'員工編號',:input_html => {:id => 'employee_uid',:onChange => 'emp_get_name(this.value)'},autofocus: true %>
          <% else %>
            <%= f.input :employee_uid,label:'員工編號',:input_html => {:id => 'employee_uid',:onChange => 'emp_get_name(this.value)'},autofocus: true, :disabled => true %>
          <% end %>
        </td>
        <td class="td_text">
          <span id="name"></span>
        </td>
      </tr>
      <tr>
        <td colspan="2">
          <%= f.input :employee_id,as: :hidden,:input_html => {:id => "employee_id"} %>
          <% if params[:action] == 'new' || params[:action] == 'create' %>
            <%= f.input :duty_date,as: :string,label:'出勤日期',:input_html => {:id => "duty_date", :onBlur => 'emp_get_ViewSchEmp()'} %>
          <% else %>
             <%= f.input :duty_date,as: :string,label:'出勤日期',:input_html => {:id => "duty_date", :onBlur => 'emp_get_ViewSchEmp()'}, :disabled => true %>
          <% end %>
          <%= f.input :begin_date,label:'忘刷起(日期)',:input_html => {:id => "begin_date"} %>
          <%= f.input :begin_time,label:'忘刷起(時間)',:input_html => {:id => "begin_time"} %>
          <%= f.input :end_date,label:'忘刷起(日期)',:input_html => {:id => "end_date"} %>
          <%= f.input :end_time,label:'忘刷迄(時間)',:input_html => {:id => "end_time"} %>
          <%= f.input :is_closed,label:'是否關帳' %>
          <%= f.input :notes,placeholder:'備註',label:'備註' %>
        </td>
      </tr>
    </table>
  </div>

  <div class="form-actions"> 
      <%= f.button :submit,'存檔',class: 'btn btn-primary' %>
      <%= link_to 'Back', doc_forgets_path,class: 'btn btn-primary', method: :get %>
  </div>
<% end %>