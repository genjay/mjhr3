<%= simple_form_for(@ou) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :uid %>
    <%= f.input :name %>
    <%= f.input :overwork_hours_for_freetax %>
    <%= f.input :days_per_month %>
    <%= f.input :hours_per_day %>
    <%= f.input :LP_rate %>
    <%= f.input :welfare_rate %>
    <%= f.input :memo %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
