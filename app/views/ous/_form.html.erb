<%= simple_form_for(@ou) do |f| %>
  <% f.error_notification %>

  <div class="form-inputs">
    <%= f.input :uid,label:'代號' %>
    <%= f.input :name,label:'名稱' %>
    <%= f.input :overwork_hours_for_freetax,label:'加班免稅時數' %>
    <%= f.input :days_per_month,label:'' %>
    <%= f.input :hours_per_day,label:'' %>
    <%= f.input :LP_rate,label:'' %>
    <%= f.input :welfare_rate,label:'' %>
    <%= f.input :memo,label:'備註' %>
  </div>

  <div class="form-actions">
      <%= f.button :submit,'存檔',class: 'btn btn-primary' %>
      <%= link_to '回上一頁', ous_path,class: 'btn btn-warning', method: :get %>
  </div>
  
<% end %>
