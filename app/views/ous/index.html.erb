<h2>Listing Ous</h2>

<%= form_tag multi_destroy_ous_path, method: :delete do %>

  <%= link_to 'New ', new_ou_path,autofocus: true, method: :get, class: 'btn btn-primary' %>
  <%= submit_tag "Delete Selected",class: 'btn btn-danger', data: { confirm: '刪除所選資料，Are you sure?' } %>

<table id='table_id'class='table table-hover'>
  <thead>
    <tr>
      <th>項次</th>
      <th>Uid</th>
      <th>Name</th>
      <th>Overwork hours for freetax</th>
      <th>Days per month</th>
      <th>Hours per day</th>
      <th>Lp rate</th>
      <th>Welfare rate</th>
      <th>Memo</th>
    </tr>
  </thead>

  <tbody>
    <% @ous.each_with_index do |ou,i| %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= link_to ou.uid, edit_ou_path(ou) %></td>
        <td><%= link_to ou.name, edit_ou_path(ou) %></td>
        <td><%= ou.overwork_hours_for_freetax %></td>
        <td><%= ou.days_per_month %></td>
        <td><%= ou.hours_per_day %></td>
        <td><%= ou.LP_rate %></td>
        <td><%= ou.welfare_rate %></td>
        <td><%= ou.memo %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New ', new_ou_path,autofocus: true, method: :get, class: 'btn btn-primary' %>
  <%= submit_tag "Delete Selected",class: 'btn btn-danger', data: { confirm: '刪除所選資料，Are you sure?' } %>

<% end %>
