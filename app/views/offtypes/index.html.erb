<h2>假別清單</h2>

<%= form_tag multi_destroy_offtypes_path, method: :delete do %>

  <%= link_to '新增 ', new_offtype_path,autofocus: true, method: :get, class: 'btn btn-primary' %>
  <%= submit_tag "刪除",class: 'btn btn-danger btn-sm', data: { confirm: '刪除所選資料，Are you sure?' } %> 

<table id='table_id'class='table table-hover'>
  <thead>
    <tr>
      <th></th>
      <th>項次</th>
      <th>代號</th>
      <th>假別</th>
      <th>最小請假單位</th>
      <th>累進單位(分鐘)</th>
      <th>扣薪(百分比)</th>
      <th>含假日</th>
      <th>Can duplicate</th>
      <th>Is quota ctrl</th>
      <th>停用</th> 
    </tr>
  </thead>

  <tbody>
    <% @offtypes.each_with_index do |offtype,i| %>
      <tr>
        <td><%= check_box_tag "ids[]", offtype.id %></td>
        <td><%= i+1 %></td>
        <td><%= link_to offtype.uid,edit_offtype_path(offtype) %></td>
        <td><%= link_to offtype.name,edit_offtype_path(offtype) %></td>
        <td><%= offtype.mins_of_minimum %></td>
        <td><%= offtype.mins_per_unit %></td>
        <td><%= offtype.deduct_percent %></td>
        <td><%= '含假日' if offtype.include_holiday %></td>
        <td><%= '可重疊' if offtype.can_duplicate %></td>
        <td><%= '管控假' if offtype.is_quota_ctrl %></td>
        <td><%= '已停用' if offtype.is_stoped %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

  <%= link_to '新增 ', new_offtype_path,autofocus: true, method: :get, class: 'btn btn-primary' %>
  <%= submit_tag "刪除",class: 'btn btn-danger btn-sm', data: { confirm: '刪除所選資料，Are you sure?' } %>
  
<% end %>
