<p id="notice"><%= notice %></p>

<h1>Listing Offtypes</h1>

<%= link_to 'New Offtype', new_offtype_path %>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Uid</th>
      <th>Name</th>
      <th>Mins of minimum</th>
      <th>Mins per unit</th>
      <th>Deduct percent</th>
      <th>Include holiday</th>
      <th>Can duplicate</th>
      <th>Is quota ctrl</th>
      <th>Is stoped</th> 
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offtypes.each do |offtype| %>
      <tr>
        <td><%= link_to offtype.uid,edit_offtype_path(offtype) %></td>
        <td><%= offtype.name %></td>
        <td><%= offtype.mins_of_minimum %></td>
        <td><%= offtype.mins_per_unit %></td>
        <td><%= offtype.deduct_percent %></td>
        <td><%= '含假日' if offtype.include_holiday %></td>
        <td><%= '可重疊' if offtype.can_duplicate %></td>
        <td><%= '管控假' if offtype.is_quota_ctrl %></td>
        <td><%= '已停用' if offtype.is_stoped %></td> 
        <td><%= link_to 'Destroy', offtype, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

