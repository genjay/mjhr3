<%= simple_form_for(@offtype) do |f| %>
  <% f.error_notification %>

  <div class="form-inputs">
    <%= f.input :uid,label:'代號',placeholder:'假別代號', autofocus: true %>
    <%= f.input :name,label:'假別',placeholder:'假別名稱'%>
    <%= f.input :mins_of_minimum,label:'最小請假單位',placeholder:"最小請假單位(分鐘)，常用：60" %>
    <%= f.input :mins_per_unit,label:'累進單位',placeholder:'累進單位(分鐘)，常用：60' %>
    <%= f.input :deduct_percent,label:'扣薪百分比',placeholder:'扣薪百分比' %>
    <%= f.input :include_holiday,label:'含假日' %>
    <%= f.input :can_duplicate %>
    <%= f.input :is_quota_ctrl %>
    <%= f.input :is_stoped,label:'停用' %> 
  </div>

  <div class="form-actions">
      <%= f.button :submit,'存檔',class: 'btn btn-primary' %>
      <%= link_to '回上一頁', offtypes_path,class: 'btn btn-warning', method: :get %>
  </div>

<% end %> 
