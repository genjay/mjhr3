<%= simple_form_for(@offtype) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :uid %>
    <%= f.input :name %>
    <%= f.input :mins_of_minimum %>
    <%= f.input :mins_per_unit %>
    <%= f.input :deduct_percent %>
    <%= f.input :include_holiday %>
    <%= f.input :can_duplicate %>
    <%= f.input :is_quota_ctrl %>
    <%= f.input :is_stoped %>
    <%= f.input :memo %>
    <%= f.input :ou_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
