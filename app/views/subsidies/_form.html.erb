<%= simple_form_for(@subsidy) do |f| %>
  <% f.error_notification %>

  <div class="form-inputs">
    <%= f.input :uid,autofocus:true %>
    <%= f.input :name %>
    <%= f.input :rate %>
    <%= f.input :memo %>
    <%= f.input :is_stoped %> 
  </div>

  <div class="form-actions">
      <%= f.button :submit,'存檔',class: 'btn btn-primary' %>
      <%= link_to 'Back', subsidies_path,class: 'btn btn-primary', method: :get %>
  </div>

<% end %>
