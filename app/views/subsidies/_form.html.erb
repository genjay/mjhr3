<%= simple_form_for(@subsidy) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :uid,autofocus:true %>
    <%= f.input :name %>
    <%= f.input :rate %>
    <%= f.input :memo %>
    <%= f.input :is_stoped %> 
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
