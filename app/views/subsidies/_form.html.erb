<%= simple_form_for(@subsidy) do |f| %>
  <% f.error_notification %>

  <div class="form-inputs">
    <%= f.input :uid,label:'代號',autofocus:true %>
    <%= f.input :name,label:'名稱' %>
    <%= f.input :rate,label:'比率' %>
    <%= f.input :memo,label:'備註' %>
    <%= f.input :is_stoped,label:'停用' %> 
  </div>

  <div class="form-actions">
      <%= f.button :submit,'存檔',class: 'btn btn-primary' %>
      <%= link_to '回上一頁', subsidies_path,class: 'btn btn-warning', method: :get %>
  </div>

<% end %>
