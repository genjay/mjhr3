<h4><strong><%= @employee_name %></strong></h4>

<%= simple_form_for @employee_insurance, url: employee_employee_insurance_settings_path do |f| %>
  <% f.error_notification %>

  <div class="form-inputs">
    <%= f.input :NHI_LV, label: '健保級距' %>
    <%= f.input :NHI_begin_at, label: '健保(起)' %>
    <%= f.input :NHI_end_at, label: '健保(迄)' %>
    <%= f.input :NHI_subsidy_id, label: '補助等級' %>
    <%= f.input :labor_lv, label: '勞保級距' %>
    <%= f.input :labor_begin_at, label: '勞保(起)' %>
    <%= f.input :labor_end_at, label: '勞保(迄)' %>
    <%= f.input :labor_subsidy_id, label: '補助等級' %>
    <%= f.input :LP_Lv, label: '勞退級距' %>
    <%= f.input :LP_begin_at, label: '勞退(起)' %>
    <%= f.input :LP_end_at, label: '勞退(迄)' %>
    <%= f.input :LP_subsidy_id, label: '補助等級' %>
    <%= f.input :is_free_for_2nd, label: '二低免繳原因' %>
    <%= f.input :reson_for_free2nd, label: '二低免繳原因' %>
    <%= f.input :memo, label: '備註' %>
  </div>

  <div class="form-actions">
      <%= f.button :submit,'存檔',class: 'btn btn-primary' %>
      <%= link_to 'Back', employee_employee_insurance_settings_path, class: 'btn btn-primary', method: :get %>
  </div>

<% end %> 