<p id="notice"><%= notice %></p>

<h1>Listing Departments</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Uid</th>
      <th>Name</th>
      <th>Worktype</th>
      <th>Upper</th>
      <th>Is stoped</th> 
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= link_to department.uid, department %></td>
        <td><%= link_to department.name, department %></td>
        <td><%= department.worktype %></td>
        <td><%= department.upper_id %></td>
        <td><%= department.is_stoped %></td> 
        <td><%= link_to 'Show', department %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

