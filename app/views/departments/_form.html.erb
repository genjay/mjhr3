<%= simple_form_for(@department) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs"> 
    <%= f.input(:uid,label: '代號',placeholder:'部門代號', autofocus: true) %>  
    <%= f.input :name,placeholder:'部門名稱',label: '部門' %>  
    <%= f.association :worktype, value_method: :id, :label_method => lambda { |f| "#{f.uid}  #{f.name} " },label: '班別' %> 
    <%= f.association :upper,label: '上層主管', :label_method => lambda { |f| "#{f.uid} #{f.name}"},:prompt => '請選擇上層主管'%>
    <%= f.input :is_stoped %>
    <%= f.input :memo,placeholder:'備註' %> 
  </div>

  <div class="form-actions"> 
    <table>
      <tr>
        <td>
      <%= f.button :submit,'存檔',class: 'btn btn-primary' %> </td>
      <td> 
      <%= link_to 'Back', departments_path,class: 'btn btn-primary' %> </td>
      <td><%= ('&nbsp;'*30).html_safe %> </td>
      <td>
      <%= (link_to '刪除', department_path, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger') if @department.id != nil %> </td>
     </tr>
    </table>
  </div>
<% end %>
