<%= simple_form_for(@department) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :uid, autofocus: true %>
    <%= f.input :name %>
    <%= f.association :worktype %>
    <%= f.input :upper_id %>
    <%= f.input :is_stoped %>
    <%= f.input :memo %>
    <%= f.input :ou_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
