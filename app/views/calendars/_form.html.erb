<%= simple_form_for(@calendar) do |f| %>
  <div class="form-inputs">
    <%= f.input :duty_date, as: :string, :readonly => true %>
    <%= f.input :wday, :readonly => true %>
    <%= f.input :is_holiday %>
  </div> 

  <div class="form-actions" >
    <%= f.button :submit,'存檔' %>

    <%= link_to 'Back', calendars_path, method: :get, class: 'btn btn-primary'%>
  </div>
<% end %>