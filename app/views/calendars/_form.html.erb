<%= simple_form_for(@calendar) do |f| %>
  <div class="form-inputs">
    <%= f.input :duty_date, as: :string, :readonly => true %>
    <%= f.input :is_holiday, collection: [['Y',1],['N',0]] , selected: (:is_holiday)? 1 : 0 %>
  </div> 

  <div class="form-actions" >
    <%= f.button :submit,'存檔' %>

    <%= link_to 'Back', calendars_path, class: 'btn btn-primary'%>
  </div>
<% end %>